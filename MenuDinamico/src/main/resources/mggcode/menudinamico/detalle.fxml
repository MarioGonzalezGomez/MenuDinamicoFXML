<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="detalleController">
   <children>
      <FlowPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <ImageView fx:id="ivUser" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <FlowPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </FlowPane.margin></ImageView>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="lblGender">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <Label fx:id="lblFirstName">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <Label fx:id="lblLastName">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <Label fx:id="lblEmail">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <Label fx:id="lblCell">
                     <VBox.margin>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <Button fx:id="btnVolver" alignment="BASELINE_CENTER" mnemonicParsing="false" onAction="#volverInicio" text="%btn.volver">
                     <graphic>
                        <FontIcon iconLiteral="far-arrow-alt-circle-left" iconSize="12" />
                     </graphic>
                  </Button>
               </children>
            </VBox>
         </children>
      </FlowPane>
   </children>
</StackPane>
