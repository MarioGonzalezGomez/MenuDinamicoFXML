<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane alignment="TOP_LEFT" prefHeight="262.0" prefWidth="191.0" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mggcode.menudinamico.Controlador">
    <VBox fx:id="vBox" maxHeight="Infinity" maxWidth="70" style="-fx-background-color: 000000;" translateX="-50">
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="lblHome" minWidth="-Infinity" text="%lbl.home">
                    <font>
                        <Font name="Calibri Bold" size="12.0" />
                    </font>
                </Label>
                <ImageView fx:id="imageHome" fitHeight="45.0" fitWidth="70.0" onMouseClicked="#desplegarMenu" pickOnBounds="true" preserveRatio="true" style="-fx-translate-x: 30;">
                    <image>
                        <Image url="@../images/casa.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="lblAudio" minWidth="-Infinity" text="%lbl.vol">
                    <font>
                        <Font name="Calibri Bold" size="12.0" />
                    </font>
                </Label>
                <ImageView fx:id="imageAudio" fitHeight="45.0" fitWidth="70.0" onMouseClicked="#desplegarMenu" pickOnBounds="true" preserveRatio="true" style="-fx-translate-x: 33;">
                    <image>
                        <Image url="@../images/ajustamiento.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="lblContactos" minWidth="-Infinity" text="%lbl.contact">
                    <font>
                        <Font name="Calibri Bold" size="12.0" />
                    </font>
                </Label>
                <ImageView fx:id="imageContactos" fitHeight="45.0" fitWidth="70.0" onMouseClicked="#desplegarMenu" pickOnBounds="true" preserveRatio="true" style="-fx-translate-x: 15;">
                    <image>
                        <Image url="@../images/grupo-de-personas.png" />
                    </image>
                </ImageView>
            </children>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Label fx:id="lblAjustes" minWidth="-Infinity" text="%lbl.ajustes">
                    <font>
                        <Font name="Calibri Bold" size="12.0" />
                    </font>
                </Label>
                <ImageView fx:id="imageAjustes" fitHeight="45.0" fitWidth="70.0" onMouseClicked="#desplegarMenu" pickOnBounds="true" preserveRatio="true" style="-fx-translate-x: 29;">
                    <image>
                        <Image url="@../images/ajustes.png" />
                    </image>
                </ImageView>

                <Pane fx:id="panel" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: B0AAA980;">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </Pane>
            </children>
        </HBox>

    </VBox>
    <HBox fx:id="listaDetalle" prefHeight="100.0" prefWidth="200.0">
        <children>
            <ListView fx:id="lista" editable="true" prefHeight="200.0" prefWidth="200.0" />

            <fx:include fx:id="detalle" source="detalle.fxml" />
            <fx:include fx:id="grafico" source="grafico.fxml" />
        </children>
    </HBox>
</StackPane>
